{
	"name": "beeclinic-desktop",
	"version": "0.0.8",
	"main": "main/main.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "electron .",
		"build": "electron-builder",
		"public": "npx electron-builder -mw",
		"build:mac": "electron-builder --mac dmg zip",
		"build:win": "electron-builder --win nsis"
	},
	"type": "module",
	"build": {
		"appId": "com.yhocso.bsdaoquang.beeclinicdesktop",
		"productName": "BeeClinic",
		"directories": {
			"buildResources": "assets",
			"output": "release"
		},
		"files": [
			"dist/**",
			"main/**",
			"preload/**",
			"package.json"
		],
		"mac": {
			"target": [
				"dmg",
				"zip"
			],
			"icon": "assets/icons/icon.icns"
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "assets/icons/icon.ico"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "BeeClinic"
		},
		"linux": {
			"icon": "assets/icons/icon.png"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "bsdaoquang",
				"repo": "beeclinic-desktop"
			}
		]
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "Phần mềm quản lý phòng khám",
	"devDependencies": {
		"electron": "^37.2.5",
		"electron-builder": "^26.0.12"
	},
	"dependencies": {
		"electron-updater": "^6.6.2",
		"node-machine-id": "^1.1.12",
		"sqlite3": "^5.1.7"
	}
}
