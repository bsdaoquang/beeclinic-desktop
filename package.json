{
	"name": "beeclinic-desktop",
	"version": "0.0.1",
	"main": "main/main.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "electron .",
		"build": "electron-builder"
	},
	"type": "module",
	"build": {
		"appId": "com.beeclinic.desktop",
		"productName": "BeeClinic",
		"directories": {
			"buildResources": "assets",
			"output": "release"
		},
		"files": [
			"dist/**",
			"main/**",
			"preload/**",
			"package.json"
		],
		"mac": {
			"target": "dmg"
		},
		"win": {
			"target": "nsis"
		}
	},
	"mac": {
		"icon": "assets/icons/icon.icns"
	},
	"win": {
		"icon": "assets/icons/icon.ico"
	},
	"linux": {
		"icon": "assets/icons/icon.png"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"devDependencies": {
		"electron": "^37.2.5",
		"electron-builder": "^26.0.12"
	},
	"dependencies": {
		"node-machine-id": "^1.1.12",
		"sqlite3": "^5.1.7"
	}
}
